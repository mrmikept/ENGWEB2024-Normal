extends layout

block content
    h2.w3-center
        b Entidade NIPC: 
        span= info.entidade_comunicante
    .w3-container.w3-margin-bottom
        ul.w3-ul.w3-card-4
            li
                b NIPC Entidade Comunicante: 
                span= info.NIPC_entidade_comunicante
            li
                b Entidade Comunicante: 
                span= info.entidade_comunicante
            li
                b Somatorio valores dos Contratos: 
                span= info.totalAmount
    .w3-container.w3-margin-bottom.w3-card-4
        h3 
            b Contratos relacionados:
        table.w3-table-all.w3-margin-top
            tr
                th idcontrato
                th objectoContrato
                th dataCelebracaoContrato
                th precoContratual
                th NIPC_entidade_comunicante
                th entidade_comunicante
            each data in list
                tr
                    td
                        a(href="/" + data._id)= data._id
                    td= data.objectoContrato || 'Sem Informação'
                    td= data.dataCelebracaoContrato || 'Sem Informação'
                    td= data.precoContratual || 'Sem Informação'
                    td
                        a(href="/entidades/" + data.NIPC_entidade_comunicante)= data.NIPC_entidade_comunicante
                    td= data.entidade_comunicante || 'Sem Informação'
        a.w3-button.w3-teal.w3-margin-top.w3-margin-bottom(href="/")
            b Voltar à lista de Registos